<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="TermsAndConditionActivity">


    <ImageView
        android:layout_width="68dp"
        android:layout_height="93dp"
        android:layout_marginTop="132dp"
        android:src="@drawable/hamrobazarlogo"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.865"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="278dp"
        android:layout_height="91dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="16dp"
        android:text="Welcome to Hamrobazar App"
        android:textColor="#2F93D4"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank you for installing Hamrobazar App."
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.195"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="380dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:text="Before you can start using our online platform, please read our terns of service &amp; accept it."
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.87"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <CheckBox
        android:id="@+id/cbTerms"
        android:layout_width="294dp"
        android:layout_height="51dp"
        android:layout_marginTop="28dp"
        android:background="#C7C7C7"
        android:text="Click to view Terms of Use"
        android:textColor="#fff"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <CheckBox
        android:id="@+id/cbSafety"
        android:layout_width="294dp"
        android:layout_height="51dp"
        android:layout_marginTop="10dp"
        android:background="#C7C7C7"
        android:text="Click to view Safety Tips"
        android:textColor="#fff"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbTerms" />

    <CheckBox
        android:id="@+id/cbPosting"
        android:layout_width="294dp"
        android:layout_height="51dp"
        android:layout_marginTop="10dp"
        android:background="#C7C7C7"
        android:text="Click to view Ad Posting Rule"
        android:textColor="#fff"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbSafety" />

    <Button
        android:id="@+id/btnAgree"
        android:layout_width="344dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="#2F93D4"
        android:text="I have read &amp; agree to above terms"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbPosting" />

</androidx.constraintlayout.widget.ConstraintLayout>